<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="Description" content="Enter your description here" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Ropa+Sans&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style.css" />
    <title>UrQr</title>
  </head>
  <body>
    <!-- Node Url Shortener And QR-CODE Generator-->
    <nav class="container-fluid nav__background">
      <h1 class="display-5 fw-bold">UrQr</h1>
      <h4 class="fw-bold text-center">Shortener = URL + QRCODE</h4>
    </nav>
    <!-- First time View Demo -->
    <div class="container" id="firstTime">
      <h5 class="thanks text-center mt-4 text-uppercase">
        ðŸŽŠ Thanks For Visiting, for a first Time ðŸŽŠ
      </h5>
    </div>
    <div class="container mainContainer">
      <form
        action="/"
        method="POST"
        class="container d-flex align-items-center justify-content-evenly"
      >
        <input
          placeholder="Enter Your Link"
          type="text"
          name="fullUrl"
          value="{{fullUrl}}"
          id="shortener"
          class="form-control p-2"
          autofocus
        />
        <button
          type="submit"
          id="sendLink"
          data-bs-toggle="tooltip"
          data-bs-placement="top"
          title="Click Me"
          class="btn sendMe__btn fw-bold"
        >
          Click
        </button>
      </form>
      <div class="container copyGetter">
        <input
          type="text"
          placeholder="Shorten Link"
          name="shortUrl"
          id="copyText"
          value="{{shortUrl}}"
          class="p-2 form-control"
          readonly
        />
        <button
          data-bs-toggle="tooltip"
          data-bs-placement="top"
          title="Copy Me"
          class="btn copyBtn fw-bold p-2"
          id="copyBtn"
        >
          Copy
        </button>
      </div>
      <div class="container mt-5 box__opt">
        <hr size="5" class="text-white" />
        <span>QR CODE</span>
      </div>
      <div class="container img__box">
        <span id="loader-box">
          <span id="loading"></span>
        </span>
        <img class="{{openImg}}" id="qr_code_img" src="{{qrCode}}" alt="" />
      </div>
    </div>

    {{! footer contact me }}
    <div class="container-fluid footer mt-5">
      {{! <a
        target="_blank"
        class="nav-link"
        href="https://www.instagram.com/phoenix_81_/"
      ><h4 class="developer text-center p-1">Design And Developed By Phoenix âš¡</h4></a> }}
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"
    ></script>
    <!-- Tool Tip -->
    <script>
      var tooltipTriggerList = [].slice.call(
      document.querySelectorAll('[data-bs-toggle="tooltip"]') ); var tooltipList
      = tooltipTriggerList.map(function (tooltipTriggerEl) { return new
      bootstrap.Tooltip(tooltipTriggerEl); });
    </script>
    <script src="js/client.js"></script>
  </body>
</html>